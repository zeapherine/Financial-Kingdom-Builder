    "designPrinciples": [
      "Use rounded corners extensively (8px minimum)",
      "Implement generous white space for breathing room",
      "Apply vibrant colors for positive emotional impact",
      "Include micro-interactions for engagement",
      "Maintain consistent visual hierarchy",
      "Use bold typography for clear communication",
      "Implement gamification elements prominently",
      "Ensure high contrast for accessibility",
      "Use shadow/elevation for depth perception",
      "Keep navigation simple and intuitive"
    ],
    
    "commonPatterns": {
      "lessonTile": {
        "description": "Circular lesson nodes with progress indicators",
        "style": {
          "shape": "circle",
          "size": 64.0,
          "backgroundColor": "#58CC02",
          "borderColor": "#46A302",
          "borderWidth": 3.0,
          "elevation": 4.0
        }
      },
      "practiceButton": {
        "description": "Large, prominent practice buttons",
        "style": {
          "backgroundColor": "#58CC02",
          "height": 56.0,
          "borderRadius": 12.0,
          "elevation": 4.0,
          "textColor": "#FFFFFF",
          "fontSize": 18.0,
          "fontWeight": "FontWeight.w700"
